{
  "defaults": [
    {
      "languages": ["css", "scss", "less", "sass"],
      "alias": "CSS/SCSS/LESS/SASS",
      "linters": ["stylelint"],
      "formatters": ["prettier"]
    },
    {
      "languages": ["javascript", "javascriptreact", "typescript", "typescriptreact"], 
      "alias": "JavaScript/JSX TypeScript/TSX",
      "linters": ["eslint"],
      "formatters": ["prettier"]
    },
    {
      "languages": ["go"],
      "linters": ["golangci_lint"]
    },
    {
      "languages": ["html"],
      "alias": "HTML",
      "formatters": ["prettier"]
    },
    {
      "languages": ["lua"],
      "linters": ["luacheck"],
      "formatters": ["stylua"]
    },
    {
      "languages": ["php"],
      "alias": "PHP",
      "linters": ["phpcs"],
      "formatters": ["phpcbf"]
    },
    {
      "languages": ["python"],
      "linters": ["flake8"],
      "formatters": ["autopep8"]
    },
    {
      "languages": ["ruby"],
      "linters": ["reek"]
    },
    {
      "languages": ["vim"],
      "alias": "VIM",
      "linters": ["vint"]
    }
  ]
}
